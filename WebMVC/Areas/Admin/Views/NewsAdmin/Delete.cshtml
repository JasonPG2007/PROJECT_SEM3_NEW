@model ObjectBussiness.News

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<style>
    dt, dd {
        color: black
    }
</style>
<div class="container-fluid py-4">
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Contents)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Contents)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ShortContents)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ShortContents)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Picture)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Picture)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateSubmitted)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateSubmitted)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoryID)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AccountID)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AccountID)
            </dd>
        </dl>
        <br />

        @using (Html.BeginForm("Delete", "NewsAdmin", FormMethod.Post))
        {
            <input type="hidden" asp-for="NewsID" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back To List", "Index", "NewsAdmin", null, new { @class = "btn btn-success" })
        }
    </div>
</div>