@model ObjectBussiness.NewsCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-4">

            <form action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.LabelFor(n => n.CategoryID)
                    @Html.EditorFor(model => model.CategoryID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(n => n.CategoryName)
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br />

    <div>
        <a href="~/Admin/NewsCategory" class="btn btn-danger">Back To List</a>
    </div>
</div>
